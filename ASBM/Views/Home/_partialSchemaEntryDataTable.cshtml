@model List<ASBM.Models.SchemeModel>

<table id="table" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr class="dataHead">
            <th>SL</th>
            <th>Scheme No</th>
            <th>Scheme Name</th>
        </tr>
    </thead>
    <tbody>
        @{ int rows = 1;}
        @if (Model != null && Model.Count > 0)
        {
            foreach (var obj in Model)
            {
                <tr class="inAc" style="color: black;font-size: 13px !important;">
                    <td>@rows</td>
                    <td>@obj.scheme_no</td>
                    <td>@obj.scheme_name</td>
                </tr>
                rows++;
            }
        }
    </tbody>
</table>


