                </div>


                <div class="row form-group" style="margin-bottom: 0px;">
                    <div class="col-md-6">
                        <label>Type of Bill :</label>
                        <select id="ddlTypeBill" name="ddlTypeBill" class="form-control placeholder-no-fix selectpicker" data-show-subtext="true" data-live-search="true">
                            <option value="0">-- Select --</option>
                        </select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-6">
                        <label>Department:</label>
                        <select id="ddlDepartment" name="ddlDepartment" class="form-control placeholder-no-fix selectpicker" data-show-subtext="true" data-live-search="true">
                            <option value="">-- Select --</option>
                        </select>
                    </div>
                </div>

                <div class="row form-group" style="margin-bottom: 0px;">
                    <div class="col-md-6">
                        <label>Fund Name:</label>
                        <select id="ddlFund" name="ddlFund" class="form-control placeholder-no-fix selectpicker" data-show-subtext="true" data-live-search="true">
                            <option value="">-- Select --</option>
                        </select>
                    </div>
                </div>

                <div class="row form-group" style="margin-bottom: 0px;">
                    <div class="col-md-6">
                        <label>Description Of Work:</label>
                        <textarea type="text" id="txtDescriptionOfWork" placeholder="Work Description" name="txtDescriptionOfWork" class="form-control placeholder-no-fix" autocomplete="off"></textarea>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-4">
                        <label>Mobile No :</label>
                        <input type="number" id="txtMobileNo" placeholder="" name="txtMobileNo" class="form-control placeholder-no-fix" autocomplete="off" maxlength="10">
                    </div>
                </div>

                <div class="form-group row justify-content-center text-center">
                    <div class="col-sm-12">
                        <button type="button" class="btn btn-info" id="btn_submit">Submit</button>
                    </div>
                </div>
            </form>

            <div id="prtCmsDataTable">
                @Html.Partial("~/Views/Home/_partialRandomBillGenerationDataTable.cshtml", Model)
