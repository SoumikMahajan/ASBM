@model List<ASBM.Models.RandomBillGenerationModel>
@{
    ViewBag.Title = "Random Bill Generetor Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/admin/css/random_bill_generation.css" rel="stylesheet" />

<div class="container">
    <div class="container" style="background-color: white; color: black; padding-bottom: 20px;">
        <div class="row no-gutters">
            <div class="flex-column justify-content-center about-content" style="width: 100% !important;">
                <div class="section-title">
                    <h2>RANDOM BILL GENERATOR</h2>
                </div>
            </div>
        </div>

        <div class="container" style="background-color: beige;">
            <form id="bill_form" method="post">
                <div class="row form-group" style="margin-bottom: 0px;">
                    <div class="col-md-4">
                        <label>Name :</label>
                        <input type="text" id="txtName" placeholder="Your Name" name="txtName" class="form-control placeholder-no-fix" autocomplete="off" maxlength="50">
                    </div>
                    @*<div class="col-md-2">
                        <label></label>
                        <button type="button" class="btn addmore btn-indigo rounded-lg" style="margin-top: 17px;font-size: 9px;">Add More</button>
