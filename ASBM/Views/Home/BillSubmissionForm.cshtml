@model List<ASBM.Models.BillSubmission>
@{
    ViewBag.Title = "Bill Submission Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/assets/admin/css/bill_submission.css" rel="stylesheet" />

<div class="container">
    <div class="container" style="background-color: white; color: black; padding-bottom: 20px;">
        <div class="row no-gutters">
            <div class="flex-column justify-content-center about-content" style="width: 100% !important;">
                <div class="section-title">
                    <h2>Bill Submission</h2>
                </div>
            </div>
        </div>

        <div class="container" style="background-color: beige;">

            <form id="bill_form" method="post">
                <div class="row form-group" style="text-align: center;">
                    <div class="col-md-12">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input showhide" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="Individual">
                            <label class="form-check-label" for="inlineRadio1">Individual</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input showhide" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="HUF">
                            <label class="form-check-label" for="inlineRadio2">HUF</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input showhide" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="Limited Company">
                            <label class="form-check-label" for="inlineRadio3">Limited Company</label>
                        </div>

                        @*</div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">*@
                        <div class="form-check form-check-inline">
                            <input class="form-check-input showhide" type="radio" name="inlineRadioOptions" id="inlineRadio4" value="PVT LTD Company">
                            <label class="form-check-label" for="inlineRadio4">PVT LTD Company</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input showhide" type="radio" name="inlineRadioOptions" id="inlineRadio5" value="SOLE PROPRIETOR">
                            <label class="form-check-label" for="inlineRadio5">SOLE PROPRIETOR</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input showhide" type="radio" name="inlineRadioOptions" id="inlineRadio6" value="PARTNERSHIP FIRM">
                            <label class="form-check-label" for="inlineRadio6">PARTNERSHIP FIRM</label>
                        </div>


                    </div>
                </div>

                <div class="row form-group" id="ltdpvt">
                    <div class="col-md-6">
                        <label>If Limited/PVT LTD Company Name :</label>
                        <input type="text" id="txtCmpName" placeholder="Enter first Company Name" name="txtCmpName" class="form-control placeholder-no-fix" autocomplete="off" value="" maxlength="50">
                    </div>
                </div>

                <div class="row form-group" id="IndSole">
                    <div class="col-md-6">
                        <label>If Individual/Sole Proprietor Type Name :</label>
                        <input type="text" id="txtSoleProprietorName" placeholder="Enter Sole Proprietor Type Name" name="txtSoleProprietorName" class="form-control placeholder-no-fix" autocomplete="off" value="" maxlength="50">
                    </div>
                </div>

                <div class="row form-group" id="Partnership">
                    <div class="col-md-6">
                        <label>If Partnership Firm Type Name :</label>
                        <input type="text" id="txtSoleProprietorName" placeholder="Enter Sole Proprietor Type Name" name="txtSoleProprietorName" class="form-control placeholder-no-fix" autocomplete="off" value="" maxlength="50">
                    </div>
                </div>

                <div class="row form-group" id="Huf">
                    <div class="col-md-6">
                        <label>If HUF Type Name :</label>
                        <input type="text" id="txtSoleProprietorName" placeholder="Enter Sole Proprietor Type Name" name="txtSoleProprietorName" class="form-control placeholder-no-fix" autocomplete="off" value="" maxlength="50">
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-4">
                        <label>Type of Bill:</label>
                        <select id="ddlTypeBill" class="form-control placeholder-no-fix selectpicker" data-show-subtext="true" data-live-search="true">
                            <option value="">Select</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label>Department:</label>
                        <select id="ddlDepartment" class="form-control placeholder-no-fix selectpicker" data-show-subtext="true" data-live-search="true">
                            @*<option value="">Select</option>*@
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label>Pan No :</label>
                        <input type="text" id="txt_pan" placeholder="Enter Pan NO" name="" class="form-control placeholder-no-fix" autocomplete="off" maxlength="10">
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-4">
                        <label>GST NO :</label>
                        <input type="text" id="txt_gst" placeholder="Enter GST NO" name="" class="form-control placeholder-no-fix" autocomplete="off" maxlength="50">
                    </div>
                    <div class="col-md-4">
                        <label>Fund Name:</label>
                        <select id="ddlFund" class="form-control placeholder-no-fix selectpicker" data-show-subtext="true" data-live-search="true">
                        </select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-4">
                        <label>Description of Work :</label>
                        <input type="text" id="txt_work_desc" placeholder="Enter Description of Work" name="" class="form-control placeholder-no-fix" autocomplete="off" maxlength="50">
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-4">
                        <label>Amount :</label>
                        <input type="text" id="txt_amount" placeholder="Enter Amount" name="" class="form-control placeholder-no-fix" autocomplete="off" maxlength="50">
                    </div>
                </div>

                <div class="form-group row justify-content-center text-center">
                    <div class="col-sm-12">
                        <button type="button" class="btn btn-info" id="btn_submit">Submit</button>
                    </div>
                </div>
            </form>

            <div id="prtCmsDataTable">
                @Html.Partial("~/Views/Home/_partialBillSubmissionDataTable.cshtml", Model)
            </div>

            <!--<table id="tab_bill_submission" class="table table-striped">
                <thead>
                    <tr>-->
            @*<th scope="col">CHOOSE</th>*@
            <!--<th scope="col">DOCKET NO</th>
            <th scope="col">DATE</th>-->
            @*<th scope="col">STATUS</th>*@
            @*<th scope="col">EDIT / DELETE</th>*@
            <!--</tr>
                </thead>
                <tbody>
                </tbody>
            </table>-->
        </div>
    </div>

</div>


<script src="~/assets/admin/js/bill_submission.js"></script>


<!---------------------------- Modal for Confirm Submit ----------------------->
<div id="myForward" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content modal_forward_claim_content">
            <div class="modal-header">
                <h4 class="modal-title modal_title">Are you sure?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body modal_forward_claim_body">
            </div>
            <div class="modal-footer">
                <span class="show_forward_btn_dtls"></span>

                <button type="button" class="btn btn-danger frwd_btn_no btn_auto_redirect" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>





