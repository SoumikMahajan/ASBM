@model List<ASBM.Models.OfficerModel>

@{
    ViewBag.Title = "Officer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/admin/css/officer_entry.css" rel="stylesheet" />

<div class="container">
    <div class="container" style="background-color: white; color: black; padding-bottom: 20px;">
        <div class="row no-gutters">
            <div class="flex-column justify-content-center about-content" style="width: 100% !important;">
                <div class="section-title">
                    <h2>Officer Entry</h2>
                </div>
            </div>
        </div>

        <div class="container" style="background-color: beige;">

            <form id="bill_form" method="post">

                <div class="row form-group">
                    <div class="col-md-4">
                        <label>Officer Name</label>
                        <input type="text" id="txt_officer_name" name="txt_officer_name" placeholder="Enter Officer Name" class="form-control placeholder-no-fix">
                    </div>

                    <div class="col-md-4">
                        <label>Pan No :</label>
                        <input type="text" id="txt_pan" placeholder="Enter Pan No" name="txt_pan" class="form-control placeholder-no-fix" autocomplete="off" maxlength="12">
                    </div>

                    <div class="col-md-4">
                        <label>Mobile :</label>
                        <input type="text" id="txt_mobile" placeholder="Enter Mobile No" name="txt_mobile" class="form-control placeholder-no-fix" autocomplete="off" maxlength="10">
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-4">
                        <label>GPF :</label>
                        <input type="text" id="txt_gpf" placeholder="Enter GPF No" name="txt_gpf" class="form-control placeholder-no-fix" autocomplete="off">
                    </div>

                    <div class="col-md-4">
                        <label>User Type:</label>
                        <select id="ddlUserType" class="form-control placeholder-no-fix selectpicker" data-show-subtext="true" data-live-search="true">
                            <option value="">-- Select --</option>
                            <option value="1">BILL COLLECTOR</option>
                            <option value="2">VOUCHER GENERATOR</option>
                            <option value="3">ACCOUNTANT</option>
                            <option value="4">FINANCE OFFICER</option>
                        </select>
                    </div>

                    <div class="col-md-4 department_ddl d-lg-none">
                        <label>Department:</label>
                        <select id="ddlDepartment" class="form-control placeholder-no-fix selectpicker" data-show-subtext="true" data-live-search="true">
                            @*<option value="">Select</option>*@
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label>Password :</label>
                        <input type="text" id="txt_pass" placeholder="Enter Password" name="txt_pass" class="form-control placeholder-no-fix" autocomplete="off">
                    </div>

                </div>


                <div class="form-group row justify-content-center text-center">
                    <div class="col-sm-12">
                        <button type="button" class="btn btn-info" id="btn_submit">Submit</button>
                    </div>
                </div>
            </form>

            <div id="prtCmsDataTable">
                @Html.Partial("~/Views/Home/_partialOfficerEntryDataTable.cshtml", Model)
            </div>

        </div>
    </div>

</div>


<script src="~/assets/admin/js/officer_entry.js"></script>


<!---------------------------- Modal for Confirm Submit ----------------------->
<div id="myForward" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content modal_forward_claim_content">
            <div class="modal-header">
                <h4 class="modal-title modal_title">Are you sure?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body modal_forward_claim_body">
            </div>
            <div class="modal-footer">
                <span class="show_forward_btn_dtls"></span>

                <button type="button" class="btn btn-danger frwd_btn_no btn_auto_redirect" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>