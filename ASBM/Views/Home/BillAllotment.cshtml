@model List<ASBM.Models.BillAllotementModel>
@{
    ViewBag.Title = "Bill Allotment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/admin/css/bill_allotement.css" rel="stylesheet" />

<div class="container">
    <div class="container" style="background-color: white; color: black; padding-bottom: 20px;">
        <div class="row no-gutters">
            <div class="flex-column justify-content-center about-content" style="width: 100% !important;">
                <div class="section-title">
                    <h2>BILL ALLOTTMENT</h2>
                </div>
            </div>
        </div>

        <div class="container" style="background-color: beige;">
            <form id="bill_form" method="post">
                <div class="row form-group">
                    <div class="col-md-6">
                        <label>Department:</label>
                        <select id="ddlDepartment" class="form-control placeholder-no-fix selectpicker" data-show-subtext="true" data-live-search="true">
                        </select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-6">
                        <label>Docket No :</label>
                        <select id="ddlDocketNo" name="ddlDocketNo" class="form-control placeholder-no-fix selectpicker" data-show-subtext="true" data-live-search="true">
                            <option value="0"> -- Select -- </option>
                        </select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-6">
                        <label>Allotted To (Officer Name):</label>
                        <select id="ddlOfficer" name="ddlOfficer" class="form-control placeholder-no-fix selectpicker" data-show-subtext="true" data-live-search="true">
                            <option value="0"> -- Select -- </option>
                        </select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-6">
                        <label>Allotted Date :</label>
                        <input type="date" id="AllottedDate" placeholder="" name="AllottedDate" class="form-control placeholder-no-fix" autocomplete="off" maxlength="50">
                    </div>
                </div>

                <div class="form-group row justify-content-center text-center">
                    <div class="col-sm-12">
                        <button type="button" id="btn_submit" class="btn btn-info">Submit</button>
                    </div>
                </div>
            </form>

            <div id="prtCmsDataTable">
                @Html.Partial("~/Views/Home/_partialBillAllotementDataTable.cshtml", Model)
            </div>

